   width: 100%;

}
.radio{
 flex: 1;

}

.btn{
    background-image: linear-gradient(to right, #207BFD , #2C36FF);
   color: #fff;
   display: flex;
   align-items: center;
   justify-content: center;
   box-shadow: 0rpx 10rpx 10rpx rgba(17, 122, 241, 0.315); 
   margin-top: 70rpx;
