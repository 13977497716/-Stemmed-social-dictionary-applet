   display: flex;
   justify-content: center;
   align-items: center;
   flex-direction: column;
   width: 100%;
   padding: 0 40rpx;
   box-sizing: border-box;
}

.input{
 width: 70%;
display: flex;
align-items: center;
padding: 25rpx  40rpx;
