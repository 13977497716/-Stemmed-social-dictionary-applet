/* pages/user/user.wxss */
page{
    background-color: var(--back);
}
.navs{
    width: 100%;
    display: flex;
    align-items: center;
    padding: 30rpx 30rpx;
   justify-content: space-between;
   box-sizing: border-box;
   border-bottom: 1rpx solid rgba(236, 236, 236, 0.712);
   font-size: 35rpx;
   background-color: #fff;

}
.right{
    display: flex;
    align-items: center;
}
.icon{
    margin-right: 10rpx;
    vertical-align: middle;
    width: 58rpx !important;
    height: 58rpx !important;
    border-radius: 50%;
}
.navs image{
    width: 30rpx;
    height: 30rpx;
}
.right text{
    color: rgb(160, 160, 160);
    font-size: 28rpx;
    margin-right: 15rpx;
}
.upp-div{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.719);
}
.kuan{
    position: relative;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 80%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
}

.head{
  
    font-size: 35rpx;
}
.kuan input{
   margin-top: 50rpx;
    width: 80%;
    padding: 15rpx;
    border-bottom: 1rpx solid rgb(228, 228, 228);
}
.uppBtn{
    margin-top: 50rpx;
    background-color: var(--blue);
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}
.kuan image{
    position: absolute;
    right: 5rpx;
    top: 5rpx;
    width: 50rpx;
    height: 50rpx;
   
}