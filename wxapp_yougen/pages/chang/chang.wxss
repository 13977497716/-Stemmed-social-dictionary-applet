/* 官方 */
page{
    background-color: var(--back);
}
.items{
    padding: 50rpx 20rpx 20rpx 0;
    margin:30rpx;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    box-shadow: 0rpx 0rpx 10rpx rgb(190, 190, 190);
    position: relative;
}
.items-tou{
    flex: 2;
    border-right: 1rpx solid var(--back);
    margin-right: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.items-tou .icon{
    background-color: rgb(20, 180, 6);
    color: #fff;
    padding: 5rpx 20rpx;
    border-radius: 30rpx;
    font-size: 20rpx;
  margin-top: 10rpx;
}
.items-tou image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
.items-nr{
    flex: 7;

}
.items .items-title{

    font-size: 35rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    /* border-bottom: 1rpx solid var(--back); */
    letter-spacing:15rpx;
    padding-bottom: 10rpx;
}
.text1{
    padding: 10rpx 0;
    display: flex;
    font-size: 25rpx;
    color: rgb(136, 136, 136);

}
.text1>text{
   width: 80rpx;

}
.text1>view{
    flex: 1;
    width: 0; 
}
.text2{
    text-overflow: ellipsis;
overflow-x: hidden;
white-space: nowrap;
}
/* 收藏 */
.items-chang{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 13rpx;
    top: 6rpx;
}
.add{
    position: fixed;
    bottom: 20rpx;
    right: 30rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    box-shadow: 5rpx 5rpx 10rpx rgb(138, 138, 138);
    background-color: var(--blue);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 60rpx;
    color: #fff;
}
.van-popup{
    padding: 20rpx !important;
}
