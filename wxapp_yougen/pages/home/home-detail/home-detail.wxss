page{
    background-color: var(--back);
}
.item{
    width: 100%;
    padding: 25rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: rgb(255, 255, 255);
    margin-top: 20rpx;
   
}

.user{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.user .left{
    flex: 1;
 
}
.user .right{
    flex: 6;
    font-weight: bold;

}
.user .chang{
    width: 50rpx;
    height: 50rpx;

}
.user .left image{
   width: 80rpx;
   height: 80rpx;
   display: flex;
  
    border-radius: 50%;
}
.right view:nth-child(2){
    font-weight: 400;
    color: rgb(160, 160, 160);
    font-size: 25rpx;
}

.title{
    width: 100%;
    padding:  20rpx 0;
    display: flex;
    align-items: center;
    font-size: 40rpx;
    margin-top: 20rpx;
}
.bian{
    width: 8rpx;
    height: 50rpx;
   background-color: var(--blue);
    margin-right: 50rpx;
}
.text{
    width: 100%;
    line-height: 45rpx;
    text-indent:25px;

    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  
}
.gn{
    width:100%;
   margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content:flex-end;
}
.zan,.pl{
     display: flex;
     align-items: center;
     justify-content: center;
    padding: 0 20rpx;
   border: 1rpx solid rgb(243, 243, 243);
}
.gn image{
    width: 50rpx;
    height: 50rpx;
}

/* 点击评论 */
.van-tabs__wrap{
    border-bottom: 1rpx solid var(--back) !important;
}
.dianzan{
    width: 100%;
    padding: 25rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
   background-color: #fff;
   border-bottom: 1rpx solid var(--back);
   box-sizing: border-box;
}
.dianzan image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
/* 评论文字 */
.pl-text{
    font-weight: 400;
    font-size: 30rpx;
    margin-top: 10rpx;
}
/* 我要评论 */
.hei{
    background-color: rgba(34, 34, 34, 0.397);
    position: fixed;
    width: 100%;
    height: 100vh;
    z-index: 99;
    top: 0;
    left: 0;
}
.user-pl{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    box-shadow: -10rpx 10rpx 10rpx rgb(100, 100, 100);
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;

}
.user-text-pl{
    flex: 1;
    background-color: var(--back);
    padding: 20rpx;
    height: 90rpx;
}
.btn{
    width: 100%;
    height: 70rpx;
    border-radius: 35rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    margin: 0 auto;
    background-color: var(--blue);
}