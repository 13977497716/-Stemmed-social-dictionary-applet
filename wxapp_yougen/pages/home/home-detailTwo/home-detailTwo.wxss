page {
    background-color: var(--back);
}

/* 官方 */
.items {
    /* padding: 50rpx 20rpx 20rpx 0; */
    margin: 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    box-shadow: 0rpx 0rpx 10rpx rgb(190, 190, 190);
    position: relative;

}

.items-tou {
    flex: 2;
    border-right: 1rpx solid var(--back);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    border-bottom: 1rpx solid var(--back);
    padding: 20rpx 0;
}

.items-tou .icon {
    background-color: rgb(20, 180, 6);
    color: #fff;
    padding: 5rpx 20rpx;
    border-radius: 30rpx;
    font-size: 20rpx;
    margin-top: 10rpx;
}

.items-tou image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.items-nr {
    flex: 7;

}

.items .items-title {

    font-size: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    /* border-bottom: 1rpx solid var(--back); */
    letter-spacing: 15rpx;
    padding-bottom: 10rpx;
    margin-top: 20rpx;
}

.text1 {
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    font-size: 30rpx;
    color: rgb(136, 136, 136);
    position: relative;
}
.text1::before{
    content: "";
    display: inline-block;
    width: 50%;
    height: 2rpx;
   background-color: rgb(238, 238, 238);
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}
.text1:nth-last-child(1)::before{
    content: none;
}

.text1>text {
    width: 125rpx;
  text-align: center;
margin-right: 20rpx;
}

.text1 view {
    flex: 1;

}

/* 收藏 */
.items-chang {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 13rpx;
    top: 6rpx;
}