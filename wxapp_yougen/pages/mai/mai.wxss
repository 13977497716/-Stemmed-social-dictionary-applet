/* pages/mai/mai.wxss */
page {
    background-color: var(--back);
}

.tops {
    padding-bottom: 2%;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
    background-image: linear-gradient(to right, rgb(8, 177, 219), rgb(21, 136, 243));
}

.top {
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* height: 300rpx; */
    background-image: linear-gradient(to right, rgb(8, 177, 219), rgb(21, 136, 243));
}

.top>image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 4rpx solid #fff;
}

.top .name {
    color: #fff;
    font-size: 35rpx;
    color: #fff;
    margin-top: 20rpx;
    display: flex;
flex-direction: row;
align-items: center;
margin-left: 20rpx;
box-sizing: border-box;
}
.name>image{
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}


/* 横向导航 */
.nav {
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: row;
}

.nav .nav1 {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 30rpx;
    border-right: 1rpx solid var(--back);
}

.nav1 image {
    width: 60rpx;
    height: 60rpx;
}

.nav1>view {
    color: rgb(70, 70, 70);
    margin-top: 20rpx;
}

/* 垂直导航 */
.navs {
    padding: 30rpx;
    border-bottom: 1rpx solid var(--back);
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;

}

.navs .nav2 image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}

.navs .icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
/* btn登录 */
.btn-login{
    width: 50%;
    height: 80rpx;
    color: #fff;
    background-color: rgb(238, 197, 17);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 40rpx;
    margin-top: 5%;
    font-weight: bold;
}
.login-text{
    color: #fff;
    margin-top: 20rpx;

}