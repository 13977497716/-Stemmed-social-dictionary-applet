/* pages/guanyu/guanyu.wxss */
.conte{
    width: 100%;
    height: 110vh;
    background-color: rgb(63, 63, 63);
    display: flex;
  align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    padding: 0 40rpx;
}
.h1{
    font-size: 50rpx;
    color: #fff;
    margin-top: 40%;
    font-weight: bold;
}
.text{
    line-height: 60rpx;
    color: #fff;
    margin-top: 40rpx;
    font-size: 32rpx;
    text-indent:30px;
}
.bottom{
    width: 100%;
    margin-top: 20%;
    color: #fff;
    display: flex;
    justify-content: flex-end;
    margin-right: 30rpx;
}
.icon{
    width: 100rpx;
   
}
.xiala{
    color: var(--blue);
    position: absolute;
    bottom: 7%;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.xiala view{
    margin: 20rpx 0;
}